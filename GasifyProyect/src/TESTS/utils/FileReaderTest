import org.junit.jupiter.api.Assertions;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

public class InvoiceGeneratorHTTPTest {

    private InvoiceGeneratorHTTP invoiceGenerator;

    @BeforeEach
    public void setup() {
        invoiceGenerator = new InvoiceGeneratorHTTP();
    }

    @Test
    public void generateInvoice_ValidInput_ReturnsResponse() {

        String[] info = { "property1", "value1", "property2", "value2" };

        String response = invoiceGenerator.generateInvoice(info);

        Assertions.assertNotNull(response);
        Assertions.assertFalse(response.isEmpty());
    }

    @Test
    public void connectHTTP_ValidInput_ReturnsResponse() {

        String input = "{ \"property1\":\"value1\", \"property2\":\"value2\" }";
        
        String response = invoiceGenerator.connectHTTP(input);
        
        Assertions.assertNotNull(response);
        Assertions.assertFalse(response.isEmpty());
    }
}
